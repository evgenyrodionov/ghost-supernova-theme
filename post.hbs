{{!< default}}

{{! The comment above "< default" means - insert everything in this file into
    the {body} of the default.hbs template, which contains our header/footer. }}

<article class="{{post_class}} fadeInUp">
  <div class="col-xs-12">
    {{#post}}
      <div class="row">
        <div class="col-lg-2 post-meta">
          <h3>
            <time datetime="{{date format='YYYY-MM-DD'}}" id="post-date">{{date format="DD MMM YYYY"}}</time>
          </h3>
          <p class="post-tags">
            {{tags}}
          </p>
        </div>
        <div class="col-lg-8 post-content">
          <h3 class="post-title" id="post-title">{{{title}}}</h3>

          {{content}}
        </div>
      </div> <!-- .row -->

      <footer class="post-footer">
        <div class="row post-author">
          <div class="col-lg-2 post-meta">
            <h3>Author</h3>
          </div>
          <div class="col-lg-10">
            <div class="row">
{{!--               <div class="col-xs-3 col-md-2">
                <img src="{{author.image}}" class="post-author-image" alt="">
              </div>
 --}}              <div class="col-xs-9 col-md-10">
                <h3>{{author.name}}</h3>
                <p>{{author.bio}}</p>
              </div>
            </div>
          </div>
        </div>

        <div class="row post-share">
          <div class="col-lg-2 post-meta">
            <h3>Share post</h3>
          </div>
          <div class="col-lg-10">
            <a class="fa fa-twitter fa-social col-xs-3" href="http://twitter.com/share?text={{encode title}}&url={{url absolute="true"}}"
                onclick="window.open(this.href, 'twitter-share', 'width=550,height=235');return false;">
                <span class="hidden">Twitter</span>
            </a>
            <a class="fa fa-facebook fa-social col-xs-3" href="https://www.facebook.com/sharer/sharer.php?u={{url absolute="true"}}"
                onclick="window.open(this.href, 'facebook-share','width=580,height=296');return false;">
                <span class="hidden">Facebook</span>
            </a>
            <a class="fa fa-google-plus fa-social col-xs-3" href="https://plus.google.com/share?url={{url absolute="true"}}"
               onclick="window.open(this.href, 'google-plus-share', 'width=490,height=530');return false;">
                <span class="hidden">Google+</span>
            </a>
            <a class="fa fa-vk fa-social col-xs-3" href="http://vk.com/share.php?url={{url absolute="true"}}"
               onclick="window.open(this.href, 'google-plus-share', 'width=490,height=530');return false;">
                <span class="hidden">VK</span>
            </a>
          </div>
        </div>
      </footer>

      <div class="post-disqus row">
        <div class="col-xs-12">
          <div id="disqus_thread"></div>
        </div>
      </div>
    {{/post}}
  </div>  
</article>